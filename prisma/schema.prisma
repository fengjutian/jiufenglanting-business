datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
}

model Business {
  id          Int     @id @default(autoincrement())
  name        String   // 业务名称
  email       String   // 联系方式或标识
  address     String   // 地址
  type        String   // 类型
  contact     String   // 通讯方式
  rating      Float? @default(0.0) // 评价（0~5）
  latitude    Float?   // 纬度
  longitude   Float?   // 经度
  otherInfo   String?  // 其他信息
  imageBase64 String?  // 图片（Base64）
  description String?  // 描述/简介
}


model Shop {
  id          Int      @id @default(autoincrement())
  name        String
  owner       String
  phone       String?
  address     String?
  status      Int      @default(1)
  imageBase64 String?  @map("image_base64")
  rating      Float?   @default(0.0)
  review      String?
  latitude    Float?
  longitude   Float?
  shopType    String?  @map("shop_type")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  description String?

  @@map("shops")
}



