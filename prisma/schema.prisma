datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
}

model Business {
  id          Int     @id @default(autoincrement())
  name        String
  email       String  @unique
  address     String  // 地址字段
  type        String  // 类型字段
  contact     String  // 通讯方式字段
  rating      Float?  // 评价字段，使用 Float 类型并允许为 null
  latitude    Float?  // 纬度字段，使用 Float 类型并允许为 null
  longitude   Float?  // 经度字段，使用 Float 类型并允许为 null
  otherInfo   String? // 其他信息字段，允许为 null
}

